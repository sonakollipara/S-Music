@model IEnumerable<Song>

@{
	ViewData["Title"] = "List of Songs";
}
<div class="row">
	<div class="col-md-8 offset-2">
		<table class="table`">
			<thead>
				<tr>
					<th>@Html.DisplayNameFor(m => m.Title)</th>
					<th>@Html.DisplayNameFor(m => m.Language)</th>
					<th>@Html.DisplayNameFor(m => m.SongURL)</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				@foreach(var item in Model)
				{
					<tr>
						<td class="align-middle">
							@Html.DisplayFor(modelitem => item.Title)
						</td>
						<td class="align-middle">
							@Html.DisplayFor(modelitem => item.Language)
						</td>
						<td class="align-middle">
							<img class="rounded-circle" src="@item.SongURL" alt="@item.Language" style="max-width:150px">
						</td>
						<td class="align-middle">
							<a class="btn btn-outline-primary"><i class="bi bi-pencil-square">Edit</i></a>|
							<a class="btn btn-outline-info"><i class="bi bi-eye">Details</i></a>|
							<a class="btn btn-danger"><i class="bi bi-trash">Delete</i></a>
						</td>
					</tr>
				}
				
			</tbody>
		</table>
	</div>	
</div>